<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kesahv.idiyhomeautomation.MainActivity">


    <TextView
        android:text="@string/Text1"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:background="#024569"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/relative1"
        android:layout_alignParentStart="true"
        android:background="?attr/colorControlHighlight">

        <TextView
            android:text="Type: Any-Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/textView6"
            tools:ignore="HardcodedText" />

        <Button
            android:text="ON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/off"
            android:id="@+id/imageView1"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

        <Button
            android:text="OFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/background_light"
            android:layout_marginStart="11dp"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toEndOf="@+id/textView6"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:id="@+id/progressBar1" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:background="?attr/colorControlHighlight"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Type: Light-Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            tools:ignore="HardcodedText" />

        <Button
            android:text="@string/on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light"
            tools:ignore="RelativeOverlap" />

        <Button
            android:text="@string/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView3"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/background_light"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:layout_width="50dp"
            app:srcCompat="@drawable/off"
            android:id="@+id/imageView"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/background_light"
        tools:ignore="HardcodedText"
        android:text="Â© 2017 Keshav Mainali ALL RIGHT RESERVED"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
